{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "paths": {
      "*": ["node_modules/*"]
    },
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2016"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
